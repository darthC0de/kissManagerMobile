{
    "branchPrefix": "updates/",
    "packageRules": [
        {
            "updateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        },
        {
            "updateTypes": [
                "major"
            ],
            "automerge": false
        }
    ],
    "assignAutomerge": true,
    "assignees": [
        "rodcordeiro",
        "JuniorAlvess"
    ],
    "labels": [
        "dependencies"
    ],
    "recreateClosed": true,
    "rebaseWhen": "conflicted",
    "vulnerabilityAlerts": {
        "labels": [
            "security"
        ],
        "assignees": [
            "@rodcordeiro"
        ]
    },
    "extends": [
        "config:base",
        ":dependencyDashboard",
        "github>whitesource/merge-confidence:beta"
    ],
    "schedule":  [
                     "before 3am on the first day of the month"
                 ],
    "timezone":  "America/Sao_Paulo"
}